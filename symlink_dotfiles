#!/usr/bin/bash
DOTFILES=$(pwd)

cd ~
ln -s $DOTFILES/.tmux.conf
ln -s $DOTFILES/.vimrc
ln -s $DOTFILES/.zshrc
ln -s $DOTFILES/.zshenv
ln -s $DOTFILES/.bashrc
ln -s $DOTFILES/.profile
ln -s $DOTFILES/.Xresources

echo "Symlinking openbox config files..."
if ! [ -d "$DIRECTORY" ]; then
	mkdir -p ~/.config/openbox/
fi
cd ~/.config/openbox/
ln -s $DOTFILES/.config/openbox/autostart
ln -s $DOTFILES/.config/openbox/menu.xml
ln -s $DOTFILES/.config/openbox/rc.xml

printf "Do you want to symlink .emacs.d? [yn] "
read symlink

if [ $symlink = "y" ]; then
	cd ~
	
	echo "Symlinking .emacs.d..."

	ln -s $DOTFILES/.emacs.d

	echo "Done!"
elif [ $symlink = "n" ]; then
	echo "Ok. Not symlinking .emacs.d..."
else
	echo "That was not a valid choice. Not symlinking, just in case."
fi
