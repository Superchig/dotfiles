#!/bin/sh

# This symlinks scripts from ~/dotfiles/scripts to ~/bin.

BIN="$HOME/bin"

mkdir -p "$BIN"

if echo "$PATH" | grep -q "$BIN"; then
  echo "PATH correct üëç: contains $BIN"
else
  echo "Warning ‚ö†Ô∏è: PATH does not include $BIN"
fi

for FILE in ~/dotfiles/scripts/*; do
  if [ -f "$BIN/$(basename "$FILE")" ]; then
    echo "File exists ‚úÖ: $FILE"
  else
    ln -s "$FILE" "$BIN"
    echo "File symlinked üîó: $FILE"
  fi
done
